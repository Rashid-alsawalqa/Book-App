<!DOCTYPE html>
<html lang="en">

<head>
  <link href="https://fonts.googleapis.com/css?family=Merienda&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Shadows+Into+Light&display=swap" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Book Collection</title>
  <link rel="stylesheet" href="./style.css" />
</head>

<body>
  <!-- Simulate a smartphone / tablet -->
<div class="mobile-container">

  <!-- Top Navigation Menu -->
  <div class="topnav">
    <a href="#home" class="active">Home</a>
    <div id="myLinks">
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>
    <a href="javascript:void(0);" class="icon" onclick="myFunction()">
      <i class="fa fa-bars"></i>
    </a>
  </div>
  <main>
    <h4>Search for books</h4>
    <!-- action visits the route and method is the route method -->
    <form action='/searches' method='post'>
      <input id="input" type="text" name="search" placeholder="Enter a title or author" required>
      <fieldset id="title">
        <label for="title">
          <span class="span">Title</span>
          <input id="span" type="radio" name="search" value="title" required>
        </label>
      </fieldset>

      <fieldset id="author">
        <label for="author">
          <span class="span">Author</span>
          <input  id="span" type="radio" name="search" value="author" required>
        </label>
      </fieldset>
      <div>
        <button id="button" type="submit"><p id="p">Search the Google Books API</p></button>
      </div>
    </form>
  </main>
  <script>
    function myFunction() {
      var x = document.getElementById("myLinks");
      if (x.style.display === "block") {
        x.style.display = "none";
      } else {
        x.style.display = "block";
      }
    }
    </script>
</body>

</html>