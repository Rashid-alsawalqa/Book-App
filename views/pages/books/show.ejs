
<!DOCTYPE html>
<html lang="en">

<head>
  <link href="https://fonts.googleapis.com/css?family=Merienda&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Shadows+Into+Light&display=swap" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Book Collection</title>
  <link href="/styles/base.css" rel="stylesheet" type="text/css" />
  <link href="/styles/layout.css" rel="stylesheet" type="text/css" />
  <link href="/styles/modules.css" rel="stylesheet" type="text/css" />
  <link rel="stylesheet" href="./style.css" />
</head>

<body>
  <main>
    <!-- Simulate a smartphone / tablet -->
    <div class="mobile-container">

      <!-- Top Navigation Menu -->
      <div class="topnav">
        <a href="/" class="active">Home</a>
        <div id="myLinks">
          <a href="/new">Add a New Book</a>
          <!-- <a href="/">Home</a> -->
        </div>
        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
          <i class="fa fa-bars"></i>
        </a>
      </div>
    
    <form action="/new" method="post">
        <label>
            <ul>
            <p>Title   :
            <input class="detail" type="text" name="title" placeholder="Populated Title:" value=" <%= book.title%>">
        </p>
            <p>Author  :
            <input class="detail" type="text" name="author" placeholder="Populated Author:" value=" <%= book.author%>">
        </p>
            <p>ISBN :
            <input class="detail" type="text" name="isbn" placeholder="Populated ISBN:" value="<%= book.isbn%>">
        </p>
        <p>Bookshelf :
            <input class="detail" type="text" name="bookshelf" placeholder="Enter a Bookshelf Name:">
        </p>
        <p>Image_URL :
            <input class="detail" type="text" name="image_url" value=" <%= book.image_url%>">
        </p>
        
        
        </ul>
           <div><textarea class="textarea" name="description" placeholder="Populated Description:">" <%= book.description%>"</textarea></div> 
            
           <div class="submit">
                <input type="submit" value="Add to Database"></input>
            </div>
        </label>
    </form>
</div>
  </main>
  <script>
    function myFunction() {
      var x = document.getElementById("myLinks");
      if (x.style.display === "block") {
        x.style.display = "none";
      } else {
        x.style.display = "block";
      }
    }
  </script>
</body>

</html>


